<?xml version="1.0"?>
<launch>

  <!-- Arguments -->
  <arg name="bag" default="bag1.bag" />

  <!-- Rosbag play -->
  <node name="rosbag_play" type="play" pkg="rosbag" args="-l -r 0.1 $(find raw_object_tracking)/files/$(arg bag)" output="screen" />

  <!-- Point could generator -->
  <node pkg="nodelet" type="nodelet" name="point_could_generator" args="standalone depth_image_proc/point_cloud_xyzrgb">
    <remap from="depth_registered/image_rect" to="/camera/depth/image"/>
    <remap from="rgb/image_rect_color" to="/camera/rgb/image_color"/>
    <remap from="rgb/camera_info" to="/camera/rgb/camera_info"/>
    <remap from="depth_registered/points" to="/camera/rgb/points"/>
  </node>

  <!-- RViz -->
  <node name="rviz" pkg="rviz" type="rviz" required="true" />

</launch>
